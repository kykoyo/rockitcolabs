<h2>Current Events</h2>

<ul>
  <% @events.each do |event| %>
	<li>
		Title: <%= event.title %><br>
		Author: <%= event.owner.name %><br>
		Description: <%= event.description %>
	</li>
  <% end %>
</ul>
<table>
	<tr>
		<td>
			<table>
				<% @events.each do |event| %>	
				<tr>
					<td>Title:</td>
					<td><%= event.title %></td>
				</tr>
				<tr>
					<td>Author:</td>
					<td><%= event.owner.name %></td>
				</tr>
				<tr>
					<td>Description:</td>
					<td><%= event.description %></td>
				</tr>
				<% end %>
			</table>
		</td>
		<% @events.each do |event| %>
		<td>
			<%= link_to image_tag("button_edit.png"), edit_event_path(event.id) %>
		</td>
		<td>
			<%= link_to image_tag("button_delete.png"), events_path(event.id), method: :delete, data: {
			confirm: "are you sure?"} %>
		</td>
		<% end %>
	</tr>
</table>
